<section class="category">
  <h1 class="sectionTitle"><span>C</span>ategory</h1>

  <div class="container">
  <ul class="category__all">
    {% for collection in collections %}
    <li class="category__list">
      <a href={{collection.url}}>
        <img class="category__img" src={{ collection.image | img_url:'300x' }}alt="">
        <p class="category__text">{{collection.title}}</p>
      </a>
    </li>
    {% endfor %}
  </ul>
</div>
</section>